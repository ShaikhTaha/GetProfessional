<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/my_orders_row_relative_layout"
    android:background="@color/appBg">

    <!--<TextView-->
        <!--android:id="@+id/order_history_text"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Order History"-->
        <!--android:textSize="25sp"-->
        <!--app:fontFamily="sans-serif-thin"-->
        <!--android:textColor="@color/appTitleText"-->
        <!--android:layout_centerHorizontal="true"/>-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_my_orders"
        android:layout_width="345dp"
        android:layout_height="295dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp">
                    <ImageView
                        android:id="@+id/employee_image"
                        android:layout_width="110dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:foregroundGravity="center"
                        android:layout_marginBottom="6dp"
                        android:background="#800909"
                        android:src="@drawable/avatar_test"/>
                    <ImageView
                        android:src="@drawable/bg_round_radius"
                        android:layout_width="130dp"
                        android:layout_height="100dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/employee_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@string/app_font"
                    android:text="President Donald Trump"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/appTitleText"/>

            </LinearLayout>

            <View
                android:id="@+id/horizontal_view0"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#eeeeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/service_name"
                    android:layout_below="@id/order_id_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Laptop Basic Repairing"
                    android:textSize="19sp"
                    app:fontFamily="@string/app_font"
                    android:textColor="@color/appTitleText"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="3dp"/>

            </LinearLayout>

            <View
                android:id="@+id/horizontal_view1"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#eeeeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/order_id_text"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Order Id :"
                    android:textSize="19sp"
                    app:fontFamily="@string/app_font"
                    android:textColor="@color/appTitleText"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="4dp"/>
                <View
                    android:id="@+id/horizontal_view2"
                    android:layout_above="@id/service_name"
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="#eeeeee"/>
                <TextView
                    android:id="@+id/order_id_number"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:text="#10786"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:fontFamily="@string/app_font"
                    android:textColor="#212121"/>

            </LinearLayout>

            <View
                android:id="@+id/horizontal_view3"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#eeeeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/cus_id_text"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Customer Id :"
                    android:textSize="19sp"
                    app:fontFamily="@string/app_font"
                    android:textColor="@color/appTitleText"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="4dp"/>
                <View
                    android:id="@+id/horizontal_view4"
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="#eeeeee"/>
                <TextView
                    android:id="@+id/cust_id_number"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:text="#12374"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:fontFamily="@string/app_font"
                    android:textColor="#212121"/>

            </LinearLayout>

            <View
                android:id="@+id/horizontal_view5"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#eeeeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/date_and_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Date / Time :"
                    android:textSize="19sp"
                    app:fontFamily="@string/app_font"
                    android:textColor="@color/appTitleText"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="8dp"/>

                <View
                    android:id="@+id/horizontal_view6"
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="#eeeeee"/>

                <TextView
                    android:id="@+id/date_and_time_value"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    app:fontFamily="@string/app_font"
                    android:text="13-02-2019 / 05:30 pm"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

            <View
                android:id="@+id/horizontal_view7"
                android:layout_below="@id/date_and_time"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#eeeeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/amount_text"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:text="Total Amount ="
                    android:textSize="19sp"
                    app:fontFamily="@string/app_font"
                    android:textColor="@color/appTitleText"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="4dp"/>

                <View
                    android:id="@+id/horizontal_view"
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="#eeeeee"/>

                <TextView
                    android:id="@+id/amount_value"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="top"
                    app:fontFamily="@string/app_font"
                    android:text="Rs. 500/-"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#37474F"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
