<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterActivity"
    android:gravity="center_horizontal"
    android:background="@color/appBg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/appFrontBg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!--<ImageView-->
                <!--android:id="@+id/login_logo"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="150dp"-->
                <!--android:src="@drawable/splash_btm_logo"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:gravity="center_horizontal"/>-->

            <!--<View-->
                <!--android:id="@+id/login_horizontal_view1"-->
                <!--android:layout_below="@id/login_logo"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:background="@color/appBg"-->
                <!--android:gravity="center_horizontal"/>-->

            <EditText
                android:id="@+id/rf_tv_name"
                android:gravity="center_vertical"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:hint="Full Name "
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/appTitleText"/>

            <EditText
                android:id="@+id/rf_tv_number"
                android:gravity="center_vertical"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:hint="Number"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/appTitleText"/>

            <EditText
                android:id="@+id/rf_tv_email"
                android:gravity="center_vertical"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:hint="Email"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/appTitleText"/>

            <EditText
                android:id="@+id/rf_tv_address"
                android:gravity="center_vertical"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:hint="Address"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/appTitleText"/>

            <EditText
                android:id="@+id/rf_tv_password"
                android:gravity="center_vertical"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:hint="Password"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/appTitleText"/>

            <Button
                android:id="@+id/create_account_btn"
                android:layout_below="@id/login_btn"
                android:gravity="center_horizontal|center_vertical|center"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:text="CREATE ACCOUNT"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/btn_text"
                android:background="#00C853"
                android:onClick="btnCreateAccount"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
